{
  "name": "persia-ui",
  "version": "0.1.3",
  "description": "React component library with full RTL and TailwindCSS support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^3.0.0 || ^4.0.0"
  },
  "dependencies": {
    "clsx": "^2.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "tailwind.config.js"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "tsup": "^8.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "rtl",
    "tailwindcss",
    "persian",
    "farsi"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmirAghajani98/Pars-ui"
  },
  "bugs": {
    "url": "https://github.com/AmirAghajani98/Pars-ui"
  },
  "homepage": "https://github.com/AmirAghajani98/Pars-ui",
  "author": "https://github.com/AmirAghajani98"
}
